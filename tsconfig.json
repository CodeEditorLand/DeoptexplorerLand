{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"lib": ["esnext"],
		"moduleResolution": "nodenext",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}